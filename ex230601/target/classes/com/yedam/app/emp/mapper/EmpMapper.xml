<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.app.emp.mapper.EmpMapper"> <!-- 인터페이스를 가르킴 -->
	
	<sql id="empWhere">
		<where>
			<if test="departmentId != null and departmentId !=''">
				<foreach open="and department_id in (" close=")" 
					collection="deptArr" item="dept" separator=",">
					#{dept}
				</foreach>
			</if>
			<if test="firstName != null and firstName != ''">
				and first_name like '%${firstName}%'
			</if>
		</where>
	</sql>

	<insert id="insertMember"
		parameterType="com.yedam.app.emp.service.EmpVO">
		insert into
		employees(EMPLOYEE_ID,first_name,LAST_NAME,EMAIL,HIRE_DATE,JOB_ID)
		values(employees_seq.nextval,#{firstName},#{lastName},#{email},sysdate,#{jobId})
	</insert>

	<select id="selectOne" parameterType="int" resultType="EmpVO">
		select
		employee_id,
		first_name,
		last_name
		from employees
		where employee_id = #{empNo}
	</select>
	
	<select id="selectCount" resultType="int">
		select count(*) from employees
		<include refid="empWhere"></include>	
	</select>
	
	<select id="selectList" resultType="EmpVO">
		select employee_id,
		first_name,
		last_name,
		email,
		department_id
		from employees
		<include refid="empWhere"></include>
		<choose>
			<when test="orderColumn != null and orderColumn != ''">
				order by ${orderColumn}
			</when>
			<otherwise>
				order by employee_id
			</otherwise>
		</choose>
	</select>

</mapper>